{% extends 'base.html.twig' %}

{% block title %}Hello BooksController!{% endblock %}

{% block body %}

  <div class="container">

    <div class="mt-3">
      <h1 class="border-bottom">Edit Book</h1>
      <form action="/books/update/{{ book.id }}">

        <div class="mb-2">
          <label for="title" class="form-label">Title</label>
          <input type="text" value="{{ book.title }}" name="title" class="form-control">
        </div>

        <div class="mb-2">
          <label for="title" class="form-label">Author</label>
          <input type="text" value="{{ book.author }}" name="author" class="form-control">
        </div>

        <div class="mb-2">
          <label for="title" class="form-label">Year</label>
          <input type="date"  value="{{ book.date.format("Y-m-d") }}" name="year" class="form-control">
        </div>

        <button type="submit" class="btn btn-primary">Edit</button>
        <a href="/books" class="btn btn-danger">Cancel</a>

     </form>


    </div>

  </div>
{% endblock %}
